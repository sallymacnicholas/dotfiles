ALIASES_FILE="~/.zsh/zzz_aliases"
FUNCTIONS_FILE="~/.zsh/zzz_functions"
VIMFILES_DIR="~/code/vimfiles/src"

alias edit-aliases="v $ALIASES_FILE"
alias view-aliases="less $ALIASES_FILE"
alias edit-functions="v $FUNCTIONS_FILE"
alias view-functions="less $FUNCTIONS_FILE"
alias reload-env="source $ALIASES_FILE && source $FUNCTIONS_FILE"
alias vimfiles="v $VIMFILES_DIR"

alias ll="ls -l"

alias b="bundle"
alias be="b exec"
alias bet="RAILS_ENV=test be"
alias pver="bet rake pact:verify FORCE_LOCAL_PACT='client-order-history-ui'"
alias r="be rspec"

alias ga="g add -A ."
alias gb="g branch"
alias gbm="gb -M"
alias gc="g commit"
alias gca="gc --amend"
alias gcan="gc --amend --no-edit"
alias gcm="gc -m"
alias gco="git checkout"
alias gcb="gco -b"
alias gcp="git cherry-pick"
alias gd="git diff-base"
alias gdc="gd --cached"
alias gl="g log"
alias gm="g merge --ff-only"
alias gr="g rebase"
alias gri="gr -i"
alias grc="gr --continue"
alias grs="gr --skip"
alias gra="gr --abort"
alias gR="g reset --hard"
alias gRhu="gR HEAD~"
alias grhu="g reset HEAD~"
alias grm="g rm"
alias gst="g status"
alias grom="git rebase origin/master"
alias yolo="git push --force-with-lease"

alias pv="FORCE_LOCAL_PACT=iOSApp be rake pact:verify"

alias is-running="ps aux | grep -v grep | grep"

alias sf="cd ~/dev/"
alias cs="cd ~/dev/client-order-history-service"
alias ui="cd ~/dev/client-order-history-ui"
alias stserv="foreman start -f Procfile.dev"

